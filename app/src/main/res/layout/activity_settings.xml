<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >

    <!-- Life Story Lines whole row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <!-- Life Story Lines -->
        <!-- Show Life Story Lines -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3">

            <!--Life Story Lines -->
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Life Story Lines"
                android:textSize="18dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                />

            <!-- Show Life Story Lines -->
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Show Life Story Lines"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:textAllCaps="true"
                />
        </LinearLayout>

        <Spinner
            android:id="@+id/spinner_life_story_lines"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <Switch
            android:id="@+id/switch_life_story_lines"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

    </LinearLayout>


    <!-- Family Tree Lines whole row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <!-- Family Tree Lines -->
        <!-- Show Tree Lines -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3">

            <!--Family Tree Lines -->
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Family Tree Lines"
                android:textSize="18dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                />

            <!-- Show Tree Lines -->
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Show Tree Lines"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:textAllCaps="true"
                />
        </LinearLayout>

        <Spinner
            android:id="@+id/spinner_family_tree_lines"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <Switch
            android:id="@+id/switch_family_tree_lines"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

    </LinearLayout>


    <!-- Spouse Lines whole row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <!-- Spouse Lines -->
        <!-- Show Spouse Lines -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3">

            <!--Spouse Lines -->
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Spouse Lines"
                android:textSize="18dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                />

            <!-- Show Spouse Lines -->
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Show Spouse Lines"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:textAllCaps="true"
                />
        </LinearLayout>

        <Spinner
            android:id="@+id/spinner_spouse_lines"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <Switch
            android:id="@+id/switch_spouse_lines"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

    </LinearLayout>


    <!-- Map Type -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <!-- Spouse Lines -->
        <!-- Show Spouse Lines -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <!--Spouse Lines -->
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Map Type"
                android:textSize="18dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                />

            <!-- Show Spouse Lines -->
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Background Display on Map"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:textAllCaps="true"
                />
        </LinearLayout>

        <Spinner
            android:id="@+id/spinner_map_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />



    </LinearLayout>

    <!-- Map Type -->
    <LinearLayout
        android:id="@+id/resync_text_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:clickable="true">

        <!-- Spouse Lines -->
        <!-- Show Spouse Lines -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <!--Spouse Lines -->
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Resync Data"
                android:textSize="18dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                />

            <!-- Show Spouse Lines -->
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="From Family Map Service"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:textAllCaps="true"
                />
        </LinearLayout>

    </LinearLayout>

    <!-- Map Type -->
    <LinearLayout
        android:id="@+id/logout_text_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:clickable="true">

        <!-- Spouse Lines -->
        <!-- Show Spouse Lines -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <!--Spouse Lines -->
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Logout"
                android:textSize="18dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                />

            <!-- Show Spouse Lines -->
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Returns to Login Screen"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:textAllCaps="true"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>